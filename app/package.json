{
  "name": "radicle-upstream",
  "version": "0.0.1",
  "build": {
    "appId": "radicle-upstream.monadic.xyz",
    "files": [
      "public/**/*",
      "native/**/*"
    ],
    "directories": {
      "buildResources": "public"
    },
    "extraResources": [
      {
        "from": "dist/proxy",
        "to": "proxy"
      }
    ]
  },
  "main": "./native/main.comp.js",
  "devDependencies": {
    "@babel/core": "^7.7.5",
    "@babel/node": "^7.7.4",
    "@babel/preset-env": "^7.7.6",
    "chokidar": "^3.3.0",
    "color": "^3.1.2",
    "cypress": "^3.7.0",
    "electron": "^7.1.4",
    "electron-builder": "^21.2.0",
    "graphql-schema-linter": "^0.2.3",
    "husky": ">=3.1.0",
    "lint-staged": "^9.5.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.19.1",
    "prettier-plugin-svelte": "^0.7.0",
    "rollup": "^1.27.10",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.0.0",
    "rollup-plugin-livereload": "^1.0.0",
    "rollup-plugin-node-externals": "^2.1.2",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-svelte": "^5.1.1",
    "rollup-plugin-terser": "^5.1.3",
    "svelte": "^3.16.3",
    "svelte-spa-router": "^2.0.0",
    "wait-on": "^3.3.0"
  },
  "scripts": {
    "start": "run-p --race svelte:watch proxy:start:test electron:start",
    "test": "TZ='UTC' run-p --race proxy:start:test test:run",
    "test:debug": "TZ='UTC' run-p --race svelte:watch proxy:start:test cypress:open",
    "test:run": "wait-on http://localhost:8080 && yarn svelte:build && yarn cypress:run",
    "dist": "rm -rf ./dist && mkdir ./dist && yarn svelte:clean && yarn svelte:build && yarn proxy:build && cp ../proxy/target/release/proxy dist && electron-builder",
    "ci:dist": "rm -rf ./dist && mkdir ./dist && cp ../proxy/target/release/proxy dist && electron-builder",
    "electron:start": "wait-on ./public/bundle.js && wait-on ./native/main.comp.js && wait-on http://localhost:8080 && NODE_ENV=development electron .",
    "svelte:clean": "rm -rf public/bundle.*",
    "svelte:build": "yarn svelte:clean && rollup -c",
    "svelte:watch": "yarn svelte:clean && rollup -c -w",
    "proxy:build": "cd ../proxy && cargo build",
    "proxy:build:release": "cd ../proxy && cargo build --release",
    "proxy:build:test": "cd ../proxy && cargo test --no-run",
    "proxy:start": "cd ../proxy && cargo run --release -- --source=memory",
    "proxy:start:test": "cd ../proxy && cargo run --release -- --source=memory --test",
    "cypress:run": "yarn run cypress run",
    "cypress:open": "yarn run cypress open",
    "generate:colors": "babel-node --presets \"@babel/env\" scripts/generate-colors.js"
  },
  "dependencies": {
    "apollo-boost": "^0.4.4",
    "graphql": "^14.5.8",
    "svelte-apollo": "^0.3.0",
    "timeago.js": "^4.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,json,html}": [
      "prettier --write",
      "git add"
    ],
    "*.svelte": [
      "prettier --plugin-search-dir=. --write",
      "git add"
    ]
  }
}
